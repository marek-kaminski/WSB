using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace zad8
{
    class Program
    {
        static void Main(string[] args)
        {


            Console.WriteLine("Podaj ile liczb podzielnych przez 7 ma być wyświetlone: ");
            float ile;
            ile = Convert.ToInt32(Console.ReadLine());

            float a;
            a = 0;

            for (float i = ile; i > 0; i--)
            {

                // ;


                Console.WriteLine(a);
                a = a + 7;

            }

            Console.ReadKey();

        }
    }
}
